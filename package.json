{
  "name": "yassig",
  "version": "1.0.0",
  "description": "YASSIG is a SSG built on top of React 16 and Webpack4, driven by Markdown",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server -d --host 0.0.0.0 --history-api-fallback",
    "prod": "webpack -p  && echo '/*    /index.html   200' > dist/_redirects",
    "build": "webpack -p && cp config/.htaccess dist",
    "dev": "webpack -d --module-bind js=babel-loader",
    "test": "jest -u",
    "deploy": "cp -rf dist/* /Users/david/apache/"
  },
  "keywords": ["SSG", "React"],
  "author": "",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|png)$": "<rootDir>/empty-module.js"
    },
    "transform": {
      "^.+\\.md?$": "markdown-loader-jest",
      "^.+\\.js?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules",
      "docs/*.md",
      "assets"
    ],
    "setupFiles": [
      "raf/polyfill"
    ]
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-jest": "22.4.3",
    "babel-loader": "7.1.4",
    "babel-plugin-import": "1.7.0",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "css-loader": "0.28.11",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.19.1",
    "file-loader": "1.1.11",
    "flow-babel-webpack-plugin": "1.1.1",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "image-webpack-loader": "4.3.1",
    "jest": "22.4.3",
    "jest-cli": "22.4.3",
    "markdown-loader-jest": "0.1.1",
    "node-sass": "4.8.3",
    "raf": "3.4.0",
    "react": "16.4.0",
    "react-dom": "16.4.0",
    "react-test-renderer": "16.4.0",
    "sass-loader": "7.0.1",
    "style-loader": "0.21.0",
    "webpack": "4.6.0",
    "webpack-cli": "2.1.5"
  },
  "dependencies": {
    "antd": "^3.4.1",
    "axios": "^0.18.0",
    "history": "^4.7.2",
    "markdown-loader": "^2.0.2",
    "raf-polyfill": "^1.0.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "webpack-dev-server": "^3.1.1"
  }
}
